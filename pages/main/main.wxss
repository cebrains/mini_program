/*inquiry.wxss*/

#inquiry .dialog-wrap {
    width: auto;
     position: absolute;
    top: 0rpx;
    /* bottom: 470rpx; */
    left: 20rpx;
    right: 20rpx; 
     padding-bottom: 0.3rem; 
}

.loading {
    z-index: 999999999;
}

.loading, .loading .mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.loading .loadingImg {
    position: absolute;
    top: 25%;
    right: 50%;
    margin-right: -50rpx;
}

/*inquiry dialog*/

.dialog {
    width: 100%;
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
}

.dialog .comPad {
    padding: 20rpx 30rpx;
    min-width: 50rpx;
}

.dialog.inquiry-patient {
    justify-content: flex-end;
    align-items: center;
}

.dialog .header-img {
    width: 60rpx;
    height: 60rpx;
    display: inline-block;
    border-radius: 50%;
    overflow: hidden;
}

.dialog .header-img image {
    width: 100%;
    height: 100%;
}

.dialog .topic {
    max-width: 480rpx;
    display: inline-block;
    background: #fff;
    text-align: justify;
    line-height: 44rpx;
    margin-left: 20rpx;
    /*margin-top: 25rpx;*/
    position: relative;
    z-index: 10;
    font-size: 30rpx;
    border-radius: 40rpx;
}

.dialog .dialogImg {
    width: 350rpx;
    border-radius: 40rpx;
    height: 350rpx;
    overflow: hidden;
}

.dialog .dialogImg>view {
    width: 100%;
    height: 100%;
}

.dialog.inquiry-robot {
    flex-direction: column;
}

.dialog.inquiry-robot .dialogCard {
    display: flex;
    flex-direction: row;
}

.dialog.inquiry-robot .topic {
    background: #fff;
    color: #333;
}

.dialog.inquiry-robot .topic .link {
    text-decoration: underline;
    color: #41b8b0;
}

.dialog.inquiry-robot  .command {
    height: 80rpx;
    line-height: 80rpx;
    color: #41b8b0;
    padding: 0 34rpx;
    border-top: 1rpx solid rgba(216, 216, 216, 0.6);
}

.dialog.inquiry-robot  .command.finish {
    color: #999;
}

.dialog.inquiry-patient .topic {
    /* margin-right: 20rpx; */
    min-width: 60rpx;
    text-align: center;
    background: #41b8b0;
    color: #fff;
    word-wrap:break-word;
}
.click-btn-text{
  text-align:center;
  padding:16rpx;
  color:#fff;
  background:#333;
  font-size:20rpx;
  position:absolute;
  bottom:-30rpx;
  right:40rpx;
  border-radius:40rpx;
}
.dialog.inquiry-patient .topic .imgWrap {
    width: 260rpx;
    height: 200rpx;
    border-radius: 40rpx;
    overflow: hidden;
    position: relative;
    border: 2rpx solid #41b8b0;
}

.dialog.inquiry-patient .topic .imgWrap .image {
    width: 100%;
    height: 100%;
}

.dialog .diagnoseCard {
    width: 540rpx;
    box-shadow: rgba(132, 160, 188, 0.22) 0 2rpx 6rpx 2rpx;
    color: #333;
    font-size: 32rpx;
    margin-left: 80rpx;
    margin-bottom: 40rpx;
    background: #fff;
    border-radius: 40rpx;
}

.diagnoseCard .pad3 {
    padding: 0 30rpx;
}

.diagnoseCard>.text {
    line-height: 100rpx;
    font-size: 30rpx;
}

.diagnoseCard .result {
    padding: 30rpx 26rpx;
    box-sizing: border-box;
    color: #fff;
    position: relative;
}

.diagnoseCard .result .cont {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.diagnoseCard .result .name {
    font-size: 38rpx;
}

.diagnoseCard .result .weight {
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    margin: 20rpx 0;
}

.diagnoseCard .result .department {
    padding: 0 20rpx;
    background: rgba(42, 63, 84, 0.1);
    border-radius: 100rpx;
    color: 28rpx;
    display: inline-block;
    font-size: 28rpx;
}

.diagnoseCard .drug {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(216, 216, 216, 0.6);
}

.diagnoseCard .drug .text {
    color: #3d83b8;
    font-size: 28rpx;
    margin-top: 20rpx;
}

.diagnoseCard .recall {
    color: #f58b23;
    border-bottom: 1rpx solid rgba(216, 216, 216, 0.6);
    line-height: 100rpx;
}

.diagnoseCard .freeback {
    height: 100rpx;
    line-height: 100rpx;
    color: #41b8b0;
}

/* footer */
.footer {
     position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 9999;
    background: #fff;
    height: 100rpx;
    border-top: 1rpx solid #eaeaea; 
}

.footer .singleOpt {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    /* border-top: 1rpx solid #eaeaea; */
    /* background: #fff; */
    color: #fff;
}

.footer  .sureBtn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
}

.footer  .sureBtn .text {
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: right;
    color: #41b8b0;
    font-size: 32rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}

/* footer -> freeText */

.footer .freeText {
    width: 100%;
    min-height: 100rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #fff;
    display: flex;
    flex-direction: row;
    /* position: fixed;
    bottom: 0;
    left: 0; */
}

.footer .freeText .inpWrap {
    width: 85%;
    /* padding-top: 10rpx; */
}

.footer .freeText .inpWrap.online {
    width: 100%;
}

.footer .freeText .inpBtn {
    width: 15%;
    line-height: 100rpx;
    text-align: center;
    align-self: flex-end;
}
.footer .freeText .textInpt {
  padding: 6rpx;
  max-height: 200rpx;
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  background: #fff;
}

/* footer -> picker */

.footer .pickerWrap .pickerView {
    width: 100%;
    height: 368rpx;
}

.footer .pickerWrap .pickerLi {
    text-align: center;
}

/* footer -> scrollView */

.footer .scrollWrap {
    height: 100%;
}

.footer .scrollView {
    height: 245rpx;
    white-space: nowrap;
    margin-top: 70rpx;
    margin-bottom: 54rpx;
    overflow-x: auto;
    position: relative;
}

.footer .scrollView .scrollViewBox {
    width: 260rpx;
    height: 200rpx;
    margin: 0 20rpx;
    display: inline-block;
    position: relative;
    overflow: hidden;
    border-radius: 40rpx;
    border: 4rpx solid #eee;
}

.footer .scrollView .scrollViewBox.active {
    border: 4rpx solid #41b8b0;
}

.footer .scrollView .scrollViewImage {
    width: 260rpx;
    height: 200rpx;
}

.footer .scrollView .scrollViewBox .text,
.dialog.inquiry-patient .topic .imgWrap .text {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    display: inline-block;
    background: rgba(21, 37, 53, 0.6);
    color: #fff;
    text-align: center;
    padding: 0 40rpx;
    box-sizing: border-box;
    border-radius: 0 0 36rpx 36rpx;
}

.footer .scrollView .scrollViewBox .radio {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.footer .optionsWrap.show {
    animation: footerShow 1s forwards;
}

.footer .optionsWrap.hide {
    animation: footerHide 1s forwards;
}

.footer .twoOpt {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    color: #41b8b0;
    border-top: 1rpx solid #eaeaea;
}

@keyframes footerShow {
    0% {
        height: 0;
    }

    100% {
        height: 360rpx;
    }
}

@keyframes labModalHide {
    0% {
        height: 360rpx;
    }

    100% {
        height: 0;
    }
}

/*化验列表*/

#labItem-modal {
    width: 100%;
    margin-left: -10rpx;
    position: fixed;
    top: 0;
    bottom: 0;
    z-index: 100;
    background: #fff;
    transition: 0.4s;
}

#labItem-modal .scroll-wrap {
    position: absolute;
    width: 100%;
    bottom: 100rpx;
    top: 0;
}

#labItem-modal .options {
    margin-bottom: 20rpx;
    padding: 0 40rpx;
}

#labItem-modal .options .stem {
    line-height: 56rpx;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

#labItem-modal .options label {
    min-width: 40%;
    display: inline-block;
    margin-bottom: 22rpx;
}

#labItem-modal .btn-group {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background: #eef0f2;
    color: #333;
    text-align: center;
    position: absolute;
    bottom: 0;
    font-size: 32rpx;
}

#labItem-modal .btn-group view {
    width: 49%;
    box-sizing: border-box;
}

#labItem-modal.show {
    animation: labModalShow 0.3s forwards;
}

#labItem-modal.hide {
    animation: labModalHide 0.3s forwards;
}

@keyframes labModalShow {
    0% {
        height: 0;
        top: 100%;
        margin-bottom: 0;
    }

    100% {
        height: 100%;
        top: 0;
        margin-bottom: 100rpx;
    }
}

@keyframes labModalHide {
    0% {
        height: 100%;
        top: 0;
        margin-bottom: 100rpx;
    }

    100% {
        height: 0;
        top: 100%;
        margin-bottom: 0;
    }
}

/* 用户协议 */

.protocol {
    position: fixed;
    top: 0;
    bottom: 100rpx;
    left: 0;
    right: 0;
    z-index: 999999;
    background: #f5f5f5;
    animation: protocolShow 0.3s forwards;
}

.protocol scroll-view {
    height: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.protocol scroll-view view {
    text-indent: 2em;
    margin: 10rpx 0;
}

.protocol  .agreeProtocolBtn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
}

@keyframes protocolShow {
    0% {
        top: 100%;
    }

    100% {
        top: 0;
    }
}

