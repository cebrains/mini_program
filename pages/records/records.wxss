#records{
    padding:0 28rpx;
}
#records .noList{
    text-align:center;
    line-height:500rpx;
    color:#999;
}
#records .listWrap{
    width:100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color:#333;
    /* margin-bottom: 60rpx; */
    margin-top: 20rpx
}
#records .listWrap .time{
    width: 106rpx;
    height: 106rpx;
    text-align: center;
    border-radius: 50%;
    color: #fff;
}
#records .listWrap .time .day{
    margin-top: 5rpx;
    font-size: 48rpx;
    font-weight: 700;
} 
#records .listWrap .time .month{
    font-size: 28rpx;
    margin-top: -10rpx;
} 
#records .rightList{
    width: 548rpx;
    height:210rpx;
    border-radius:40rpx;
    padding:40rpx;
    margin-bottom: 30rpx;
    background: #fafafa;
    box-sizing: border-box;
}
#records .rightList .title{
    display: flex;
    line-height:40rpx;
    font-size:36rpx;
    margin-bottom:10rpx;
}
#records .rightList .title view{
    margin-right:16rpx;
    text-align:center;
}
#records .rightList .describe,#records .rightList .disease{
    line-height: 60rpx;
    font-size:28rpx;
    color:#999;
}


#records .ellipsis{
    white-space:nowrap; 
    overflow:hidden; 
    text-overflow:ellipsis;
}

