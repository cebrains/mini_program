.pad40 {
    padding: 0 40rpx;
}

/* 癌症预警 */

.recall {
    padding: 14rpx;
    line-height: 40rpx;
    background: #fef3e9;
    color: #f58b23;
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    font-size: 28rpx;
}

.recall .recall-icon {
    line-height: 38rpx;
    padding-top: 20rpx;
    font-size: 24rpx;
}

/* 第一概率 */

.num1 .disease {
    width: 100%;
    /* height: 374rpx; */
    background-size: 100% 100%;
    color: #fff;
    padding: 32rpx 48rpx;
    box-sizing: border-box;
}

.num1 .disease view {
    box-sizing: border-box;
}

.num1 .disease .name {
    font-size: 48rpx;
    margin-bottom: 6rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.num1 .disease .name text {
    font-size: 20rpx;
    color: rgba(255, 255, 255, 0.6);
}

.num1 .disease .weight {
    font-size: 36rpx;
}

.num1 .disease .depName {
    display: inline-block;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 28rpx;
    background: rgba(42, 63, 84, 0.1);
    padding: 0 16rpx;
    border-radius: 28rpx;
    margin: 16rpx 0;
}

.num1 .disease .describe, .num1 .disease .drug {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
}

.num1 .disease .drug {
    margin: 14rpx 0;
}

/* 疾病列表 list */

.list .title {
    height: 114rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #f3f3f3;
}

.list .disease {
    margin-left: 40rpx;
    padding: 40rpx 40rpx 40rpx 0;
    border-bottom: 1rpx solid #f3f3f3;
}

.list .diseaseTitle {
    height: 46rpx;
    line-height: 46rpx;
    /* display: flex;
    flex-direction: row; */
    color: #3d83b8;
    margin-bottom: 20rpx;
    font-size: 34rpx;
}

.list .diseaseTitle .weight {
    font-size: 28rpx;
    padding: 0rpx 20rpx;
    margin-right: 20rpx;
    border: 2rpx solid rgba(61, 131, 184, 0.4);
    border-radius: 38rpx;
}

.list .drug {
    font-size: 28rpx;
    color: rgba(42, 63, 84, 0.5);
    margin: 14rpx 0;
}

.list .describe {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
}

.list .describe .text {
    width: 92%;
    color: rgba(42, 63, 84, 0.5);
}

.list .describe .icon {
    width: 8%;
    text-align: center;
    color: rgba(42, 63, 84, 0.3);
}
