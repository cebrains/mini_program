/* wiki.wxss */

.pad40 {
    padding: 0 40rpx;
    text-align: justify;
}

.pageTitle {
    padding: 0 40rpx 40rpx;
    color: #3d83b8;
}

.pageTitle .diseaseName {
    font-size: 44rpx;
    line-height: 100rpx;
    font-weight: 900;
}

.pageTitle .drug {
    width: 100%;
    box-sizing: border-box;
    padding: 38rpx 34rpx 0;
    font-size: 30rpx;
    margin-top: -10rpx;
}

.pageTitle .drug .title {
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.pageTitle .drug .detail>view {
    width: 100%;
    border-top: 1rpx dashed rgba(61, 131, 184, 0.22);
    font-size: 28rpx;
    line-height: 50rpx;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
}

.pageTitle .drug .detail>view text:first-child {
    text-align: left;
    width: 20%;
}
.pageTitle .drug .detail>view text:last-child {
    text-align: left;
    width: 80%;
}

.listName {
    width: 100%;
    height: 92rpx;
    line-height: 92rpx;
    background: #fafafa;
    font-size: 34rpx;
    color: #333;
}

.list {
    border-bottom: 1rpx dotted #eaeaea;
}

.list .title {
    height: 98rpx;
    line-height: 98rpx;
    font-size: 32rpx;
    /*color:#2A3F54;*/
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.list .title .icon {
    color: rgba(42, 63, 84, 0.3);
}

.list .describe {
    line-height: 40rpx;
    padding-bottom: 20rpx;
    font-size: 28rpx;
    /*color:rgba(42,63,84,0.8);*/
    overflow: hidden;
}
